<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manon.weirdwords.FirstStep"
    android:background="@mipmap/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/toolbar">

        <ImageButton
            android:id="@+id/undo_button"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:background="@mipmap/icone_undo"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>

    <TextView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"
        android:text="Bienvenue sur WeirdWords !

Toutes les lettres ont été mélangées ! A vous de retrouver le mot original dans chaque niveau."
        android:textSize="24sp"
        android:textColor="#303030"
        android:textAlignment="center"/>



        <ImageView
            android:layout_width="215dp"
        android:layout_height="190dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="60dp"
        android:background="@mipmap/didacticiel"/>



    <TextView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="15dp"
        android:text= "Dans cet exemple, on repère les lettres D, I et N, qui forment le mot NID. Parfois, plusieurs réponses sont possibles !"
        android:textSize="25sp"
        android:textColor="#303030"
        android:textAlignment="center"/>



    <Button
        android:id="@+id/next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@mipmap/suivant"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="225dp"
        android:text="Suivant"/>


</RelativeLayout>
