<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/background"
    tools:context="com.example.manon.weirdwords.ChoosePackMenu">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@mipmap/toolbar">

            <ImageButton
                android:id="@+id/undo_button"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:background="@mipmap/icone_undo"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true" />

            <ImageButton
                android:id="@+id/param_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@mipmap/icone_param"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@mipmap/toolbar">

            <Button
                android:id="@+id/classic_button"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentLeft="true"
                android:background="@mipmap/button_niveaux_classiques"
                android:text=""/>

            <Button
                android:id="@+id/special_button"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/button_niveaux_speciaux"
                android:text=""/>

        </RelativeLayout>

        <include layout="@layout/content_choose_pack_menu2" />




    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>